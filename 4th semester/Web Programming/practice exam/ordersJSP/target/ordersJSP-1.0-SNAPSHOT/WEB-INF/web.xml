<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddProductController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.AddProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProductController</servlet-name>
        <url-pattern>/AddProductController</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DisplayProductsController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.DisplayProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DisplayProductsController</servlet-name>
        <url-pattern>/DisplayProductsController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PartialOrderController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.PartialOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PartialOrderController</servlet-name>
        <url-pattern>/PartialOrderController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmOrderController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.ConfirmOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfirmOrderController</servlet-name>
        <url-pattern>/ConfirmOrderController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CancelOrderController</servlet-name>
        <servlet-class>ro.ubb.ordersJSP.Controller.CancelOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelOrderController</servlet-name>
        <url-pattern>/CancelOrderController</url-pattern>
    </servlet-mapping>

</web-app>